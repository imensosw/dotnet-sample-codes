@model Samplecode_DotNet.ViewModels.CategoryViewModel
@{
    Layout = null;
}
<div id="VendorGridList">
    <table class="table" id="PaymentcodeGridResults">
         <thead>
            <tr>
                <th  width="5%"><span class="opaq">#</span></th>
                <th  width="30%"><span class="opaq">Name</span></th>
                <th  width="30%"><span class="opaq">Type</span></th>
                <th  width="5%"></th>
            </tr>
        </thead>
         <tbody>
             @if (Model.objCategoryListModels.Count > 0)
             {
                 foreach (var item in Model.objCategoryListModels)
                 {
                     <tr>
                         <td width="5%"><span class="opaq">@item.Rownumber</span></td>
                         <td width="30%"><span class="opaq"><b>@item.Name</b></span></td>
                         <td width="30%"><span class="opaq"><b>@item.Type</b></span></td>
                         <td class="trash-link text-center" width="3%">
                             <button type="button" class="trash-link text-center" onclick="deletefuction(@item.Id)" title="" data-toggle="tooltip" data-placement="top"><i class="fa fa-trash-o"></i></button>
                         </td>
                     </tr>
                 }
             }
            
         </tbody>
    </table>

</div>
